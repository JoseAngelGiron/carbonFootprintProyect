<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="609.0" prefWidth="826.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.JoseAngelGiron.view.ComparisonUsersController">

    <Label layoutX="422.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Comparación de Huella de Carbono" />

    <BarChart fx:id="barChartComparison" layoutX="290.0" layoutY="64.0" prefHeight="300" prefWidth="500">
        <xAxis>
            <CategoryAxis label="Categoría" fx:id="xAxis" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Huella de Carbono (kg CO₂)" />
        </yAxis>
    </BarChart>

    <Button fx:id="btnUpdate" layoutX="502.0" layoutY="394.0" onAction="#compareUserWithAverage" text="Actualizar Comparación" />

</AnchorPane>
